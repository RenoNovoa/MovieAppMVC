
@{
    ViewData["Title"] = "Search";
}

@model MovieAppSearch.ViewModel.MovieViewMocel

<h1>Search for Movies by Title or Genre! </h1>

<form asp-action="SearchResultTitle" method="post">
    <label asp-for="Title"></label>
    <input asp-for="Title" />
    <input class="btn btn-primary" type="submit" value="Search by Title" />
</form>


<form asp-action="SearchResultGenre" method="post">
    <label asp-for="Genre"></label>
    <select asp-for="Genre">
        <option disabled selected hidden>Select Gener</option>
        <option value="Sport & Fitness">Sport & Fitness</option>
        <option value="Kids & Family">Kids & Family</option>
        <option value="Romance">Romance</option>
        <option value="Drama">Drama</option>
        <option value="Scifi">Scifi</option>
        <option value="Horror">Horror</option>
        <option value="Comedy">Comedy</option>
    </select>
    <button class="btn btn-warning" type ="submit">Search by Gener </button>
</form>


